<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/currentNoteCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前笔记条数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/viewCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浏览次数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/reviewCountDay2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第2天复习的条数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/reviewCountDay7TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第7天复习的条数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/reviewCountDay15TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第15天复习的条数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/reviewCountDay30TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第30天复习的条数: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

</LinearLayout>